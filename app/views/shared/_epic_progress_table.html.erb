<% if epic_progress_presenter.any_unestimated_issues? %>
  <p class="text-danger">
    <%= "There are #{epic_progress_presenter.unestimated_issues_count} issues without points. It can affect progress and estimations."%>
  </p>
<% end %>

<table class="table align-middle mb-0 bg-white table-hover mb-5">
  <thead class="bg-light">
    <tr>
      <th scope="col">Total Points</th>
      <th scope="col">Completed Points</th>
      <th scope="col">Remaining Points</th>
      <th scope="col">Earned Value</th>
      <th scope="col">Remaining Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= epic_progress_presenter.total_points %></td>
      <td><%= epic_progress_presenter.completed_points %></td>
      <td><%= epic_progress_presenter.remaining_points %></td>
      <td><%= epic_progress_presenter.earned_value %></td>
      <td><%= "#{epic_progress_presenter.remaining_earned_value}%" %></td>
    </tr>
  </tbody>
</table>
