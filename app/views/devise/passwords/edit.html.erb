<div class="container text-center">
  <%= image_tag("/ms-icon-150x150.png", alt: "Logo") %>

  <div class="row justify-content-md-center">
    <div class="col col-lg-4">
      <h2>Change your password</h2>
      <br />

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.hidden_field :reset_password_token %>

        <div class="field form-outline mb-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "New Password", required: true %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
        </div>

        <div class="field form-outline mb-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm New Password", required: true %>
        </div>

        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <div class="col forgot">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-primary btn-block w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
