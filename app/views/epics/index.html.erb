<div>
  <p class="h1">Project Epics List</p>
  <br />

  <table class="table table-sm table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Key</th>
        <th scope="col">Project Key</th>
        <th scope="col">Summary</th>
        <th scope="col">Labels</th>
      </tr>
    </thead>
    <tbody>
      <% @jira_project_epics.each_with_index do |epic, index| %>
        <tr>
          <th scope="row"><%= index %></th>
          <td><%= epic.key %></td>
          <td><%= epic.project_key %></td>
          <td><%= epic.summary %></td>
          <td><%= epic.labels %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
