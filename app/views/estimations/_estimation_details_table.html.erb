<table class="table align-middle mb-0 bg-white table-hover mb-5">
  <thead class="bg-light">
  </thead>
  <tbody>
    <tr>
      <td>Project</td>
      <td><%= estimation.project_id %></td>
    </tr>
    <tr>
      <td>Epic</td>
      <td><%= estimation.epic_id %></td>
    </tr>
    <tr>
      <td>Created By</td>
      <td><%= estimation.user&.email %></td>
    </tr>
    <tr>
      <td>Creation Date</td>
      <td><%= estimation.created_at.strftime("%a, %d %b %Y") %></td>
    </tr>
    <tr>
      <td>Last Completed Week Number</td>
      <td><%= estimation.last_completed_week_number %></td>
    </tr>
    <tr>
      <td>Total Points</td>
      <td><%= estimation.total_points %></td>
    </tr>
    <tr>
      <td>Avg. Weekly Earned Value</td>
      <td><%= estimation.avg_weekly_earned_value %></td>
    </tr>
    <tr>
      <td>Remaining Earned Value</td>
      <td><%= "#{estimation.remaining_earned_value.round}%" %></td>
    </tr>
    <tr>
      <td>Remaining Weeks (without uncertainty)</td>
      <td><%= estimation.remaining_weeks %></td>
    </tr>
    <tr>
      <td>Estimated Finsih Date (without uncertainty)</td>
      <td><%= estimation.estimated_finish_date.strftime("%a, %d %b %Y") %></td>
    </tr>
    <tr>
      <td>Uncertainty Level</td>
      <td><%= estimation.uncertainty_level %></td>
    </tr>
   <tr>
      <td>Remaining Weeks (with uncertainty)</td>
      <td><%= estimation.remaining_weeks_with_uncertainty %></td>
    </tr>
    <tr>
      <td>Estimated Finsih Date (with uncertainty)</td>
      <td><%= estimation.estimated_finish_date_with_uncertainty&.strftime("%a, %d %b %Y") %></td>
    </tr>
    <tr>
      <td>Filters Applied</td>
      <td><%= estimation.filters_applied %></td>
    </tr>
  </tbody>
</table>
